        <br>
        First Name:<br><input type="text" name="firstname" placeholder="Joe" size="23" required>
        <br>
        Last Name:<br><input type="text" name="lastname" placeholder="Bloggs" size="23" required>
        <br>
        Password:<br><input type="password" name="password" placeholder="**********" size="23" required>
        <br>
        Email:<br><input type="email" name="email" placeholder="Joe@bloggs.co.uk" size="23" required>
        <br>
        Postcode:<br><input type="text" name="address" placeholder="POSTCODE" size="23" required>
        <br>
        City:<br>
          <select id="menudropdown" name = "city">
              <option value="sheffield">Sheffield</option>
              <option value="leeds">Leeds</option>
            </select>
        <br>
        Home Phone:<br><input type="tel" name="homephone" placeholder="Homephone" size="23" required>
        <br>
        Mobile Phone:<br><input type="tel" name="mobphone" placeholder="Mobile Phone" size="23" required>
        <br>
        <input class="slideshow-button" type="submit" name="submit" id="signUp" value="Sign Up">
