<%= erb :"template/head"%>
<%= erb :"template/adminNav"%>
<main>
  <!--End of Slideshow-->
  <h1>Add and change menu items!</h1>
    <div>
      <h1>Add to menu</h1>
      <% if @submitted && !@all_ok %>
        <p style="color:red">There were errors in your form submission, please correct them below.</p>
      <% end %>

      <form method="post" action="addMenu">

        <% if @submitted && !@unique %>
          <p style="color:red">Please enter a unique item and size.</p>
        <% end %>

        <% if @submitted && !@item_ok %>
          <p style="color:red">Please enter a valid item.</p>
        <% end %>

        <p>Item:
          <input type="text" name="item" value="<%=h @item if @submitted %>"/>
        </p>

        <% if @submitted && !@size_ok %>
          <p style="color:red">Please enter a valid size.</p>
        <% end %>

        <p>Size:
          <select name="size">
              <option value="Small">Small</option>
              <option value="Medium">Medium</option>
              <option value="Large">Large</option>
            </select>
        </p>

        <% if @submitted && !@price_ok %>
          <p style="color:red">Please enter a valid price.</p>
        <% end %>

        <p>Price:
          <input type="float" name="price" value="<%=h @price if @submitted %>"/>
        </p>
        <p>City:
          <select name="city">
              <option value="sheffield">Sheffield</option>
              <option value="leeds">Leeds</option>
            </select>
        </p>
        <input type="submit" value="Submit" />
   </form> 
</div>
<% if @results.length == 0 %>
    <p>No search results found!</p>
<% else %>
    <br />
    <table>
        <tr>
            <th>Item</th>
            <th>Size</th>
            <th>Price</th>
            <th>City</th>
        </tr>
        <% @results.each do |record| %>
                <tr>
                    <td>
                        <%=h record[1] %>
                    </td>
                    <td>
                        <%=h record[2] %>
                    </td>
                    <td>
                        Â£<%=h  '%.2f' % record[3] %>
                    </td>
                     <td>
                        <%=h record[4].capitalize %>
                    </td>
                    <td> 
                        <form method="get" action = "/admin/changeMenu">
                            <input type="hidden" name="itemID" value="<%=h record[0] %>"/>
                            <input class="slideshow-button" type="submit" value="Update Menu"/>
                        </form>
                    </td>
                    <td>
                        <form method="post" action="removeMenu">
                            <input type="hidden" name="ID" value="<%=h record[0] %>"/>
                            <input class="slideshow-button" type="submit" value="Remove" />
                        </form>
                    </td>
                </tr>     
        <% end %>
    </table>
<% end %>
<%= erb :"template/footer"%>