<% if @results.length == 0 %>
    <p>No search results found!</p>
    <% else %>
    <table>
        <tr>
            <th>Order ID</th>
            <th>Time</th>
            <th>User ID</th>
            <th>Order Details</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Tweet</th>
        </tr>
        <% @results.each do |record| %>
            <tr>
                <td><%=h record[0] %></td>
                <td><%=h record[1] %></td>
                <td><%=h record[2] %></td>
                <td>
                   <% printDetails(record[0])%>
                   <p><%=@detailString%></p>
                </td>
                <td><%=h  '%.2f' % record[3] %></td>
                <td><%=h record[4] %></td>
                  <% getTweetByOrderID(record[0]) %>
                <td> <%= @tweetString %> </td>
            </tr>
        <% end %>
    </table>
<% end %>